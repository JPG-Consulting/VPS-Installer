#!/bin/bash

# Include some external files
. installer/functions.sh

# Run as root, of course. (this might not be necessary, because we have to run the script somehow with root anyway)

if [[ $(id -u) -ne 0 ]]; then 
  echo "Must be root to run this script."
  exit 87 # Non-root Exit Error
fi

# Non-privileged user settings
. installer/user.sh

. installer/prompt.sh

. installer/certificates.sh

. installer/systemd.sh

. installer/ssh.sh

. installer/lamp.sh

. installer/bind.sh

# NOTE: Causes problems with my VPS fue to a bug in the VPS software
#. installer/iptables.sh

. installer/fail2ban.sh

. installer/mail.sh

. installer/cron-apt.sh
